{
  "name": "local-basket",
  "version": "1.0.0",
  "description": "LocalBasket restaurant management app",
  "main": "app.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:eato": "node dist/eato/server/server.mjs",
    "electron": "electron .",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "build:prod": "ng build --configuration production --base-href ./",
    "electron:build": "npm run build:prod && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "package": "electron-builder --dir",
    "dist": "ng build && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.7",
    "@angular/cdk": "^19.2.10",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/google-maps": "^19.2.18",
    "@angular/material": "^19.2.10",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/ssr": "^19.2.6",
    "@cuj1559/electron-push-receiver": "^3.1.8",
    "bootstrap": "^5.3.5",
    "date-fns": "^4.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "^10.0.1",
    "escpos": "^3.0.0-alpha.6",
    "express": "^4.18.2",
    "firebase": "^11.0.1",
    "hlt-reusable-lib": "^0.0.20",
    "node-geocoder": "^4.4.1",
    "node-printer": "^1.0.4",
    "node-thermal-printer": "^4.5.0",
    "pdfkit": "^0.17.1",
    "rxjs": "~7.8.0",
    "serialport": "^13.0.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.0",
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@types/express": "^4.17.17",
    "@types/googlemaps": "^3.43.3",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.19.111",
    "@types/web-bluetooth": "^0.0.21",
    "autoprefixer": "^10.4.21",
    "electron": "^36.7.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-serve": "^2.1.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.7.2"
  },
  "build": {
    "appId": "com.eato.app",
    "productName": "local-basket",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/eato/**/*",
      "app.js",
      "preload.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
